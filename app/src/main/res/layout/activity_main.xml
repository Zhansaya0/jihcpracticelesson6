<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_print_san"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="0"
        android:textSize="100dp"
        android:gravity="right"
        android:paddingRight="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnC"
            android:layout_margin="15dp"
            style="@style/button_function_design"
            android:text="C"/>
        <Button
            android:id="@+id/btnPlusminus"
            android:layout_margin="15dp"
            style="@style/button_function_design"
            android:text="+-"/>
        <Button
            android:id="@+id/btnPercentage"
            android:layout_margin="15dp"
            style="@style/button_function_design"
            android:text="%"/>
        <Button
            android:id="@+id/btnMultiple"
            android:layout_margin="15dp"
            style="@style/button_function_design"
            android:text="*"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn7"
            android:layout_margin="15dp"
            style="@style/button_number_design"
            android:text="7"/>
        <Button
            android:id="@+id/btn8"
            android:layout_margin="15dp"
            style="@style/button_number_design"
            android:text="8"/>
         <Button
             android:id="@+id/btn9"
             android:layout_margin="15dp"
             style="@style/button_number_design"
            android:text="9"/>
        <Button
            android:id="@+id/btnDivision"
            android:layout_margin="15dp"
            style="@style/button_function_design"
            android:text="/"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn4"
            android:layout_margin="15dp"
            style="@style/button_number_design"
            android:text="4"/>
        <Button
            android:id="@+id/btn5"
            android:layout_margin="15dp"
            style="@style/button_number_design"
            android:text="5"/>
        <Button
            android:id="@+id/btn6"
            android:layout_margin="15dp"
            style="@style/button_number_design"
            android:text="6"/>
        <Button
            android:id="@+id/btnPlus"
            android:layout_margin="15dp"
            style="@style/button_function_design"
            android:text="+"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn1"
            android:layout_margin="15dp"
            style="@style/button_number_design"
            android:text="1"/>
        <Button
            android:id="@+id/btn2"
            android:layout_margin="15dp"
            style="@style/button_number_design"
            android:text="2"/>
        <Button
            android:id="@+id/btn3"
            android:layout_margin="15dp"
            style="@style/button_number_design"
            android:text="3"/>
        <Button
            android:id="@+id/btnMinus"
            android:layout_margin="15dp"
            style="@style/button_function_design"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnPoint"
            android:layout_margin="15dp"
            style="@style/button_function_design"
            android:text="."/>
        <Button
            android:id="@+id/btn0"
            android:layout_margin="15dp"
            style="@style/button_number_design"
            android:text="0"/>

        <Button
            android:id="@+id/btnEqual"
            android:layout_margin="15dp"
            style="@style/button_function_design"
            android:text="="/>

    </LinearLayout>

</LinearLayout>